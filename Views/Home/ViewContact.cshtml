<h1>Address Book</h1>
@if (@Model.Count == 0)
{
  <h3>No contact have been added yet!</h3>
}
@foreach (var contact in Model)
{
  <h3><a href='/AddressBook/@contact.GetId()'>@contact.GetName()</a></h3>
}

<form action="/" method="get">
  <button type="submit">Home</button>
</form>

<form action="/AddressBook/Clear" method="post">
  <button type="submit" name="button">Clear All Tasks</button>
</form>
